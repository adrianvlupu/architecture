@startuml Website_Component_Diagram
!include https://raw.githubusercontent.com/adrianvlupu/C4-PlantUML/latest/C4_Component.puml
!define DEV2 https://raw.githubusercontent.com/tupadr3/plantuml-icon-font-sprites/master/dev2
!include DEV2/nodejs.puml
!include DEV2/html5.puml
!include DEV2/javascript.puml

LAYOUT_WITH_LEGEND()

title [Component Diagram] Website container (Idea 1)

Container(core, "Core", "Node.js", "Reads/writes configuration, updates markdown text and contains spec and DL model", "nodejs")
Container(cli, "CLI", "Node.js", "`all-contributors-cli`", "nodejs")
Container(app, "App", "Node.js", "Github App-driven bot", "nodejs")

Container_Boundary(website, "Website") {
  Component(site, "Website", "Docusaurus", "Documentation", "html5")
  Component(docs, "Docs", "Markdown", "Specification/CLI/Bot documentation", "")

}

Rel(app, core, "uses", "CJS/ES import")
Rel(website, core, "uses", "??")

Person(user, "User")
Rel(user, app, "instructs", "GitHub comments via GitHub Events")
Rel(user, cli, "uses", "Any terminal")
Rel(user, website, "visits/reads", "Web")

@enduml